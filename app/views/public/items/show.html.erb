<div class="row" style="margin-top:50px;">
  <div class="col-3">
    <%= image_tag @item.get_image(300,217) %>
			<%#<%= attachment_image_tag(@product, :image, fallback: "no_image.jpg",size: "300x217" ) %>
  </div>
	<div class="col-1"></div>
	<div class="col-5">
			<h2><%= @item.name %></h2>
			<p><%= @item.introduction %></p></br>
			<h3 class="product-price">￥<%= (@item.price * 1.1).to_i %><span>（税込）</span></h3>
			<%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
		      <%#<%= f.label :amount, "個数選択" %>
		      <%= f.number_field :amount, min: 1, max: 100, placeholder: '個数選択', class:"quantity-select-form", style:"width:100px;" %>
		      <%= f.hidden_field :id, :value => @item.id %>
		      <%= f.submit "カートに入れる", class: "btn btn-success" %>
		    <% end %>
	</div>
</div>
