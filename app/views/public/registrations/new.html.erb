  <h2>新規会員登録</h2></br>

  <%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
   <%= devise_error_messages! %>
    <div class="row">
      <div class="col-2">
      <%= f.label :名前 %></div>
      <div class="col-9">
      <%= f.label :（姓） %>
      <%= f.text_field :first_name, autofocus: true %>
      <%= f.label :（名） %>
      <%= f.text_field :last_name, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-2">
      <%= f.label :フリガナ %></div>
      <div class="col-9">
      <%= f.label :（ｾｲ） %>
      <%= f.text_field :first_name_kana, autofocus: true %>
      <%= f.label :（ﾒｲ） %>
      <%= f.text_field :last_name_kana, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-3">
      <%= f.label :メールアドレス %></div>
      <div class="col-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>


    <div class="row">
      <div class="col-3">
      <%= f.label :郵便番号（ハイフンなし） %></div>
      <div class="col-9">
      <%= f.text_field :postal_code, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-3">
      <%= f.label :住所 %></div>
      <div class="col-9">
      <%= f.text_field :address, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-3">
      <%= f.label :電話番号（ハイフンなし） %></div>
      <div class="col-9">
      <%= f.text_field :telephone_number, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-3">
      <%= f.label :パスワード（6文字以上） %></div>
      <div class="col-9">
      <%= f.password_field :password, autocomplete: "new-password", class: "password" %></div>
    </div>

    <div class="row">
      <div class="col-3">
      <%= f.label :パスワード（確認用） %></div>
      <div class="col-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %></div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-9">
      <%= f.submit "新規登録",class: "btn btn-success" %></div>
    </div>

  <% end %>

  <h2>既に登録済みの方</h2>

  <%= link_to "こちら", new_customer_session_path %>
  <span> からログインしてください。</span>
  <p id="notice"><%= notice %></p>
