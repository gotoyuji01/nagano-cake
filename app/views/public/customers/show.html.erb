    <h2>マイページ</h2>
      <div class="row" style="margin-top: 20px;">
        <div>
          <h2>登録情報</h2>
        </div>
        <div style="margin-left: 10px;">
  			  <%= link_to "編集する", customers_information_edit_path(@customer), class: "btn btn-success"%>&ensp;
        </div>
      </div>
      
      <div class="row">
       <div class="col-8">

        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="background-color:#F5F5F5;">氏名</th>
              <td><%= @customer.first_name %>&ensp;<%= @customer.last_name %></td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;">カナ</th>
              <td><%= @customer.first_name_kana %>&ensp;<%= @customer.last_name_kana %></td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;">住所</th>
              <td style><%= @customer.address %></td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;">電話番号</th>
              <td style><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </thead>
	      </table>
	    </div>
	   </div>
	   
