    <div class = "container">
			<h2>会員情報編集</h2>

			<%= form_with model: @customer, url: customers_information_path do |f| %>

				<div class="row" style="margin-top:50px;">
				    <p><%= f.label :氏名 %></p>
				    <p style="margin-left:95px"><%= f.text_field :first_name, autofocus: true, autocomplete: "email" %></p>
				    <p style="margin-left:10px;"><%= f.text_field :last_name, autofocus: true, autocomplete: "email" %></p>
				 </div>

				 <div class="row">
				    <p><%= f.label :フリガナ %></p>
				    <p style="margin-left:65px;"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %></p>
				    <p style="margin-left:10px;"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %></p>
				 </div>

				 <div class="row">
				    <p><%= f.label :郵便番号 %></p>
				    <p style="margin-left:65px;"><%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %></p>
				 </div>

				 <div class="row">
				    <p><%= f.label :住所 %></p>
				    <p style="margin-left:95px;"><%= f.text_field :address, autofocus: true, autocomplete: "email", size: 50 %></p>
				 </div>

				 <div class="row">
				    <p><%= f.label :電話番号 %></p>
				    <p style="margin-left:65px;"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %></p>
				 </div>
				 
				 <div class="row">
				    <p><%= f.label :メールアドレス %></p>
				    <p style="margin-left:20px;"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
				 </div>

         <div class="row">
         	 <div style="margin-left:126px;">
				    <%= f.submit "編集内容を保存", class: "btn btn-success"%>
				   </div>

			<% end %>
           <div style="margin-left:126px;">
            <%= link_to "退会する", customers_unsubscribe_path, url: customers_withdraw_path, class: "btn btn-danger" %>
	         </div>
		</div>