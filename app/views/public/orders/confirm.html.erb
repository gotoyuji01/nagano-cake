    <div class="row login-row">
      <h2>注文情報確認</h2>
      <div class="col-xs-8"  style="margin-top: 50px;">
        <table class="table table-bordered">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">商品名</th>
              <th scope="col">単価（税込）</th>
              <th scope="col">数量</th>
              <th scope="col">小計</th>
            </tr>
          </thead>
          <tbody>
            <% total = 0 %>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= image_tag cart_item.item.get_image(60,50) %>
                  <%= cart_item.item.name %></td>
                <td><%= (cart_item.item.price * 1.1).to_i%></td>
                <td><%= cart_item.amount %></td>
                <td>
                  <%= subtotal = ((cart_item.item.price * cart_item.amount) * 1.1).to_i %>
                  <%#<%= subtotal %>
                </td>
              </tr>
              <% total += (cart_item.item.price * cart_item.amount) * 1.1 %> 
            <% end %>
          </tbody>
        </table>
        
        <table class="table" style="margin-top: 50px;">
          <tbody>
            <tr>
              <th scope="row">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th scope="row">お届け先</th>
              <td>
                <p><%= @order.postal_code %>&emsp;<%= @order.address %></p>
                <p><%= @order.name %></p>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-xs-4" style="margin-top: 50px;">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="active">送料</td>
              <% @order.shipping_cost = 800 %>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td class="active">商品合計</td>
              <td><%= total.to_i %></td>
            </tr>
            <tr>
              <td class="active">請求金額</td>
              <% @order.total_payment = @order.shipping_cost + total.to_i %>
              <td><%= @order.total_payment %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-offset-5">
        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :customer_id %>
          <%= f.hidden_field :shipping_cost %>
          <%= f.hidden_field :total_payment %>
          <%= f.hidden_field :payment_method %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :postal_code %>
          <%= f.hidden_field :order_status %>
          <%= f.submit "注文を確定する",class:"btn btn-primary col-xs-12" %>
        <% end %>
      </div>
    </div>