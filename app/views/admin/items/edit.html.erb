<h2>商品編集</h2>
    
  <div style="margin-top:20px;">
    <%= form_with(model: @item, url: admin_item_path, method: :patch, local: true) do |f| %>
<!-- エラーメッセージ表示-->
    <% if @item.errors.any? %>
    <h3><%= @item.errors.count %>error occurrence</h3>
    <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
<!-- エラーメッセージ表示-->
    <div class="row">
    	<div class="col-2"><%= f.label :商品画像 %></div>
        <div class="col-5" style="margin-top:5px;"><%= f.file_field :image %></div>
    </div>
    <div class="row">
        <div class="col-2"><%= f.label :商品名 %></div>
        <div class="col-5" style="margin-top:5px;"><%= f.text_field :name, class: "form" %></div>
    </div>
    <div class="row">
        <div class="col-2"><%= f.label :商品説明 %></div>
        <div class="col-5" style="margin-top:5px;"><%= f.text_area :introduction %></div>
    </div>
    <div class="row">        
        <div class="col-2"><%= f.label :税抜価格 %></div>
        <div class="col-5" style="margin-top:5px;"><%= f.text_field :price %>円</div>
    </div>
    <div class="row">
        <div class="col-2"><%= f.label :販売ステータス %></div>
        <div class="col-5" style="margin-top:5px;"><%= f.radio_button :is_active, true %>
            	                                   <%= f.label :is_active, "販売中" %>
                                                   <%= f.radio_button :is_active, false %>
                                                   <%= f.label :is_active, "販売停止中" %></div>
    </div>
    <div class="row">
        <div class="col-2"></div>
    	<div class="col-5" style="margin-top:10px;"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
    <% end %>
   </div>

