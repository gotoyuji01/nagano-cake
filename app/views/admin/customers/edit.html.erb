
		<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>

		<div style="margin-top:20px;">
			<%= form_for [:admin,@customer] do |f| %>
				<div class="row" style="margin-top:30px;">
					<div class="col-2">会員ID</div>
	        <div class="col-5"><%= @customer.id %></div>
	      </div>

				<div class="row" style="margin-top:15px;">
				  <div class="col-2">氏名</div>
				  <div class="col-5"><%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
				                     &ensp;<%= f.text_field :last_name, autofocus: true, autocomplete: "email" %></div>
				</div>

				<div class="row" style="margin-top:15px;">
				  <div class="col-2">フリガナ</div>
				  <div class="col-5"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
				                     &ensp;<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %></div>
				</div>

				<div class="row" style="margin-top:15px;">
				  <div class="col-2">郵便番号</div>
				  <div class="col-5"><%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %></div>
				</div>

				<div class="row" style="margin-top:15px;">
				   <div class="col-2">住所</div>
				   <div class="col-5"><%= f.text_field :address, autofocus: true, autocomplete: "email", size: 50 %></div>
				</div>

				<div class="row" style="margin-top:15px;">
				   <div class="col-2">電話番号</div>
				   <div class="col-5"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %></div>
			  </div>

				<div class="row" style="margin-top:15px;">
				   <div class="col-2">メールアドレス</div>
				   <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
				</div>

				<div class="row" style="margin-top:15px;">
				 	<!-- デフォルトで顧客の現在ステータスに合わせてラジオボタンの初期値を設定するためのif文 -->
				   <div class="col-2">会員ステータス</div>
				   <div class="col-5"><%= f.radio_button :is_deleted, false %>
				    <%= f.label :is_deleted, '有効', value: false %>&ensp;
				    <%= f.radio_button :is_deleted, true %>
				    <%= f.label :is_deleted, '退会', value: true %></div>
				 </div>

        <div class="row" style="margin-top:15px;">
        	<div class="col-2"></div>
				  <div class="col-5"><%= f.submit "変更を保存", class: "btn btn-success"%></div>
        </div>
			<% end %>
		</div>
